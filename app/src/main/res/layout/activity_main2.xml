<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/shape"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Low"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#32CD32"
                    android:textSize="30sp"
                    android:typeface="sans"
                    android:layout_alignBaseline="@+id/textView22"
                    android:layout_alignBottom="@+id/textView22"
                    android:layout_toEndOf="@+id/textView4"
                    android:layout_marginStart="12dp"
                    android:layout_toRightOf="@+id/textView4" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 00 Hours"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:typeface="sans"
                    android:layout_alignBaseline="@+id/textView4"
                    android:layout_alignBottom="@+id/textView4"
                    android:layout_alignLeft="@+id/state"
                    android:layout_alignStart="@+id/state" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="73dp"
                    android:paddingBottom="10dp"
                    android:text="Статистика :"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:typeface="sans"
                    android:layout_below="@+id/textView4" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Hours/Day"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:layout_alignBaseline="@+id/textView1"
                    android:layout_alignBottom="@+id/textView1"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Состояние :"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:typeface="sans"
                    android:layout_above="@+id/textView4"
                    android:layout_alignRight="@+id/textView1"
                    android:layout_alignEnd="@+id/textView1"
                    android:layout_marginBottom="65dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Общее время : "
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:typeface="sans"
                    android:layout_centerVertical="true"
                    android:layout_alignLeft="@+id/textView1"
                    android:layout_alignStart="@+id/textView1" />

                <TextView
                    android:id="@+id/textView76"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView22"
                    android:layout_marginLeft="167dp"
                    android:layout_toRightOf="@+id/total" />

                <Button
                    android:id="@+id/clear"
                    android:layout_width="130dp"
                    android:layout_height="45dp"
                    android:background="@drawable/background"
                    android:text="Clear"
                    android:layout_marginBottom="20dp"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/textView22"
                    android:layout_alignStart="@+id/textView22"
                    android:layout_alignTop="@+id/back" />

                <Button
                    android:id="@+id/back"
                    android:layout_width="130dp"
                    android:layout_height="45dp"
                    android:background="@drawable/background"
                    android:text="Back"
                    android:layout_marginBottom="20dp"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/textView4"
                    android:layout_toEndOf="@+id/textView4" />
            </RelativeLayout>
        </RelativeLayout>



</RelativeLayout>